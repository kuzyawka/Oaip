#include <stdio.h>
int main()
{
	printf("Algoritm rascheska: ");
	int i, a, step, arr[] = { 2, 7, 3, 2, 6, 8, 4 }; double k = 1.247; int n = sizeof(arr) / sizeof(int);
	for (step = n - 1; step >= 1; step /= k) {
		for (i = 0; i < n-step; i++) {
			if (arr[i] > arr[i + step]) {
				a = arr[i];
				arr[i] = arr[i + step];
				arr[i + step] = a;
			}
		}
	}
	printf("\nRezultat raboti algoritma: ");
	for (i = 0; i < n; i++)
		printf("%d", arr[i]);
	return 0;
}
